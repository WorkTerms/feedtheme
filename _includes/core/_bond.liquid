{%- assign index = include.index | default: 0   -%}

{%- unless parts[index]                           -%}

{%-   assign var = '' | split: ','              -%}
{%-   assign var = var | push: order            -%}
{%-	  assign parts = parts | push: var              -%}

{%- else  -%}

{%-   assign var = parts[index]                   -%}
{%-   assign var = var | push: order            -%}

{%-   assign dummy = '' | split: ','            -%}
{%-   for item in parts                           -%}
{%-     assign dummy = dummy | push: item       -%}
{%-   endfor                                    -%}

{%-   assign parts = '' | split: ','              -%}
{%-   for item in dummy                         -%}
{%-	    if forloop.index0 == index              -%}
{%-	      assign parts = parts | push: var  -%}
{%-     else                                    -%}
{%-       assign parts = parts | push: item -%}
{%-     endif                                   -%}
{%-   endfor                                    -%}

{%- endunless                                   -%}

{%-	assign order = var | size                   -%}
{%-	if var contains order                       -%}

{%-   assign index = index | plus: 1            -%}
{%-   include core/_bond.liquid index=index     -%}

{%- endif                                       -%}
