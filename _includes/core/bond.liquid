{%- assign index = include.index | default: 0  -%}

{%- unless array[index]                        -%}

{%-   assign var = '' | split: ','             -%}
{%-   assign var = var | push: order           -%}
{%-	  assign array = array | push: var         -%}

{%- else                                       -%}

{%-   assign var = array[index]                -%}
{%-   assign var = var | push: order           -%}

{%-   assign dummy = '' | split: ','           -%}
{%-   for item in array                        -%}
{%-     assign dummy = dummy | push: item      -%}
{%-   endfor                                   -%}

{%-   assign array = '' | split: ','           -%}
{%-   for item in dummy                        -%}
{%-	    if forloop.index0 == index             -%}
{%-	      assign array = array | push: var     -%}
{%-     else                                   -%}
{%-       assign array = array | push: item    -%}
{%-     endif                                  -%}
{%-   endfor                                   -%}

{%- endunless                                  -%}

{%-	assign order = var | size                  -%}
{%- unless var contains order                  -%}

{%-   assign bonds = '' | split: ','           -%}
{%-   for item in array reversed               -%}
{%-     assign bonds = bonds | push: item      -%}
{%-   endfor                                   -%}
{%-   include core/_bond.liquid                -%}

{%- else                                       -%}

{%-   assign index = index | plus: 1           -%}
{%-   include core/bond.liquid index=index     -%}

{%- endunless                                  -%}
