{%- if id <= 102                           -%}
{%-   assign lexer = id                    -%}
{%-   assign parser = id                   -%}
{%- elsif id <= 329                        -%}
{%-   assign lexer = 102                   -%}
{%-   assign parser = id                   -%}
{%- else                                   -%}
{%-   assign lexer = 102                   -%}
{%-   assign parser = 329                  -%}
{%- endif                                  -%}
{%-   assign syntax = id | minus: 329      -%}

{%- assign bond  = lexer                   -%}
{%- include primes/grammar.liquid          -%}
{%- assign grammar = _grammar  | jsonify   -%}
{%- assign details = '('
       | append: bond
       | append: ','
       | append: lexer
       | append: ','
       | append: parser
       | append: ','
       | append: syntax
       | append: ')'
       | append: grammar                 -%}

{%- for prime in primes                    -%}
{%-   assign loop = forloop.index          -%}
{%-   if id <= prime                       -%}
{%-     break                              -%}
{%-   endif                                -%}
{%- endfor                                 -%}

{%- assign stage = '[' 
            | append: num       
			| append: ';'
            | append: order                -%}

{%- for item in array                      -%}
{%-   assign size = item | size            -%}
{%-   assign stage = stage
			| append: ';'
			| append: size                 -%}
{%- endfor                                 -%}
{%- assign stage = stage 
       | append: ']('
       | append: loop                             
	   | append: ')'                       -%}

