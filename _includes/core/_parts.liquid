{%- assign id = id | plus: 1               -%}
{%- if id <= 102                           -%}
{%-   assign lexer = id                    -%}
{%-   assign parser = id                   -%}
{%-   assign grammar = 0                   -%}
{%- elsif id <= 329                        -%}
{%-   assign lexer = 102                   -%}
{%-   assign parser = id                   -%}
{%-   assign grammar = 0                   -%}
{%- else                                   -%}
{%-   assign lexer = 102                   -%}
{%-   assign parser = 329                  -%}
{%-   assign grammar = id | minus: 329     -%}
{%- endif                                  -%}

{%- assign tag = _bond | jsonify           -%}
{%- assign details = '('
       | append: lexer
       | append: ','
       | append: parser
       | append: ','
       | append: grammar
       | append: ')'
       | append: tag                       -%}

{%- for prime in primes                    -%}
{%-   assign loop = forloop.index          -%}
{%-   if id <= prime                       -%}
{%-     break                              -%}
{%-   endif                                -%}
{%- endfor                                 -%}

{%- assign stage = '[' | append: num       -%}
{%- for item in array                      -%}
{%-   assign size = item | size            -%}
{%-   assign stage = stage
			| append: ';'
			| append: size                 -%}
{%- endfor                                 -%}
{%- assign stage = stage 
       | append: ']('
       | append: loop                             
	   | append: ')'                       -%}

