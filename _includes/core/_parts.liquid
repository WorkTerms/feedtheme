{%- assign data_id = '('
      | append: bond
      | append: ';'
      | append: lexer
      | append: ';'
      | append: parser
      | append: ';'
      | append: syntax
      | append: ')'                           -%}

{%- for item in primes                        -%}
{%-   assign loop = forloop.index             -%}
{%-   if id <= item                           -%}
{%-     break                                 -%}
{%-   endif                                   -%}
{%- endfor                                    -%}

{%- for item in array reversed                -%}
{%-   assign size = item 
        | size 
		| minus: 1                            -%}
{%-   assign lead = primes[size]              -%}
{%-   if forloop.first                        -%}
{%-     assign aria = '['                     -%}
{%-   else                                    -%}
{%-     assign aria = aria 
          | append: ','                       -%}
{%-   endif                                   -%}
{%-     assign aria = aria 
          | append: lead                      -%}
{%- endfor                                    -%}

{%- assign aria_details = aria 
      | append: ','
      | append: prime
      | append: ']'  -%}

