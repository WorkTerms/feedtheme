{%-     assign current = ""                -%}

{%-   if order == 30                        -%}
{%-     assign stage = "lexer"                -%}

{% if site.baseurl == "/lexer" %}
{%-  assign current = ' class="current"' -%}
{% endif                                  %}

{%-     capture node                     -%}
{{        node                            }}
{%        include tabs.liquid size=11 %}</ul>
{%        include tabs.liquid size=10 %}</li>
