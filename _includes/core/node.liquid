{%-  assign node = '<li>'                   -%}
{%-  assign index = forloop.index0          -%}

{%-  assign stage = stages[index]           -%}
{%-  assign title = titles[index]           -%}

{%-  assign baseurl = stage | prepend: "/"  -%}
{%-  if site.baseurl == baseurl             -%}
{%-    assign node = '<li class="current">' -%}
{%-  endif                                  -%}

{%-  assign node = node
       | append: '<a href="'
       | append: baseurl
       | append: '" id='
       | append: item
       | append: ' title="'
       | append: title
       | append: '">'
       | append: stage
       | append: '</a>'                    -%}

{%-  capture nodes                          -%}
{{     nodes                                 }}
{%     include tabs.liquid size=11 %}</ul>
{%     include tabs.liquid size=10 %}</li>
{%     include tabs.liquid size=10 %}{{ node }}
{%     include tabs.liquid size=11 %}<ul>
{%-  endcapture                             -%}
