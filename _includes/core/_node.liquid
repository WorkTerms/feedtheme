{%- assign strip = nodes | strip | newline_to_br | strip_newlines | split: "<br />"  -%}
{% endcomment -%}

{%-  assign title = '('
       | append: num
       | append: ')'
       | append: tag                        -%}

{%-   capture stage                        -%}
[{{ eq | default: 1 }};{{ expanse | default: 1 }};{{ weight | default: 1 }};{{ width | default: 1 }}] 
{%-   endcapture                            -%}

{%-  assign stage = '['
       | append: eq
       | append: ';'
       | append: expanse
       | append: ';'
       | append: weight
       | append: ';'
       | append: width
       | append: ']'                       -%}

{%-  assign node = '<li>'                   -%}
{%-  assign node = node
       | append: '<a href="'
       | append: baseurl
       | append: '" id='
       | append: order
       | append: ' title="'
       | append: stage
       | append: '">'
       | append: title
       | append: '</a></li>'                -%}

{%-  capture nodes                          -%}
{{     nodes                                 }}
{%     include tabs.liquid size=12 %}{{ node }}
{%-  endcapture                             -%}
{%-  continue                               -%}
