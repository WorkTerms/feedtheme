{%- assign group = 1                            -%}
{%- assign baseurl = "/"                        -%}

{%- if site.data.roots                          -%}

{%-   for item in site.data.roots               -%}
{%-     assign num = item.key | times: 1        -%}
{%-     if num < limit                          -%}
{%-       include core/parts.liquid             -%}
{%-     endif                                   -%}
{%-   endfor                                    -%}

{%- else                                        -%}
{%-   assign num = 2                            -%}
{%-   include core/parts.liquid                 -%}
{%-   include data/_primes.liquid max=10000     -%}
{%- endif                                       -%}
