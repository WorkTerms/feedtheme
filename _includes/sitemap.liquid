{%- comment -%}
*
*  This loop loops through all collection called `feeds` with category 'section'
*  and sorts it by the front matter variable 'weight' and than collect
*  each of the location into the indexed sitemap
*
*  You may see the running code here:
*  https://eq19.github.io/sitemap.xml
*
{%- endcomment -%}

<urlset
    xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
    xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	{%- if page.url contains '/index_' -%}
		{%- include sitemap/urlset.xml %}
	{%- else -%}
		{%- for page in site_pages -%}
			{%- include tabs.liquid size=1 -%}<url>
			{%- include tabs.liquid size=2 -%}<loc>{{ page.url | absolute_url | xml_escape }}</loc>
			{%- include tabs.liquid size=2 -%}<priority>{{ page.content | size | divided_by: 2048.0 | times: 10 | ceil | divided_by: 10.0 | at_least: 0.1 | at_most: 1.0 }}</priority>
			{%- include tabs.liquid size=2 -%}<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
			{%- include tabs.liquid size=1 -%}</url>
		{%- endfor %}
	{%- endif -%}
</urlset>
